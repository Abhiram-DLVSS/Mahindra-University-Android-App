<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MU" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EA3A4F</item>
        <item name="colorPrimaryVariant">@color/mu</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mu</item>
    </style>

    <style name="splash_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashimage</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/mu</item>
        <item name="colorPrimary">#EA3A4F</item>
        <item name="colorPrimaryVariant">@color/mu</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:background">@drawable/roundwhitefill</item>
        <item name="android:textColor">@color/stan</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyDepressedButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:stateListAnimator">@anim/customized_state_animator</item>
    </style>

    <style name="splash_theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
</resources>