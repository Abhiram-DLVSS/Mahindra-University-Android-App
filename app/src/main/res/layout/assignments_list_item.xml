<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assign_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:id="@+id/assign_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_heading_assign"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Heading"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/textview_desc_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_heading_assign"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Deadline"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/textview_lecturer_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_desc_assign"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="By"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_lecturer_assign"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_red_shade"
                android:text="Upload"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:background="@drawable/ic_baseline_arrow_drop_down"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_down" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>