<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MU.Intents">
    <View
        android:id="@+id/background_dimmer"
        android:visibility="gone"
        android:background="#A3000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fab_menu_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <toan.android.floatingactionmenu.FloatingActionsMenu
            android:id="@+id/fm_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:outlineAmbientShadowColor="@color/black"
            android:textAlignment="center"
            app:fab_addButtonColorNormal="@color/stan"
            app:fab_addButtonColorPressed="@color/grey_stan"
            app:fab_expandDirection="up"
            app:fab_labelStyle="@style/LabelStyle"
            app:fab_labelsPosition="left"
            app:fab_menuIcon="@drawable/ic_hamburger_icon_svg"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/fm_moodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/grey_white"
                app:fab_icon="@drawable/ic_moodle_logo"
                app:fab_size="normal"
                app:fab_title="Moodle" />
            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/fm_grades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="gone"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/grey_white"
                app:fab_icon="@drawable/ic_grade"
                app:fab_size="normal"
                app:fab_title="Grades" />

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/fm_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/grey_white"
                app:fab_icon="@drawable/ic_rupee"
                app:fab_size="normal"
                app:fab_title="Fee" />

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/fm_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/grey_white"
                app:fab_icon="@drawable/ic_eve"
                app:fab_size="normal"
                app:fab_title="Events" />

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/fm_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:visibility="gone"
                app:fab_colorNormal="@color/white"
                app:fab_colorPressed="@color/grey_white"
                app:fab_icon="@drawable/ic_timetable"
                app:fab_size="normal"
                app:fab_title="Timetable" />

        </toan.android.floatingactionmenu.FloatingActionsMenu>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>