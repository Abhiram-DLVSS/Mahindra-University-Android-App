<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"

    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_faculty"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_person"
            app:tint="@color/purple_500" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#0CE80C"
            app:srcCompat="@drawable/null_layout" />

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Dr.Bhattacharya"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/facultyPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="DEAN RESEARCH AND HOD"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
